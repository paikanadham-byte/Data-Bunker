# Data-Bunker Backend Environment Configuration

# ============================================================
# DATABASE CONFIGURATION
# ============================================================

# PostgreSQL Connection
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=data_bunker

# Connection pool settings
DB_POOL_SIZE=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# ============================================================
# SERVER CONFIGURATION
# ============================================================

NODE_ENV=development
PORT=5000
LOG_LEVEL=info

# ============================================================
# API KEYS FOR DATA SOURCES
# ============================================================

# UK Companies House API
COMPANIES_HOUSE_API_KEY=your_companies_house_key_here
COMPANIES_HOUSE_BASE_URL="https://api.companieshouse.gov.uk"

# OpenCorporates API
OPENCORPORATES_API_KEY=your_opencorporates_key_here
OPENCORPORATES_BASE_URL=https://api.opencorporates.com/v0.4

# Clearbit API (Company enrichment)
CLEARBIT_API_KEY=your_clearbit_key_here

# Explorium API (B2B company data provider)
EXPLORIUM_API_KEY=6160355f3d424b61937c58c1c5f0453b

# Google Custom Search API
GOOGLE_SEARCH_API_KEY=AIzaSyC-hmFGx38epMDwa0WtVSH7bXKbFLTd3ww
GOOGLE_SEARCH_ENGINE_ID=26433f5531f8046f7

# Google Maps API (for location visualization)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
GOOGLE_MAPS_BASE_URL=https://maps.googleapis.com/maps/api

# Email Validation API (SendGrid/ZeroBounce/Hunter.io)
EMAIL_VALIDATION_API_KEY=your_email_validation_key_here
EMAIL_VALIDATION_BASE_URL=https://api.hunter.io/v2

# Phone Number Validation API (Twilio Lookup / Numverify)
PHONE_VALIDATION_API_KEY=your_phone_validation_key_here
PHONE_VALIDATION_BASE_URL=https://lookups.twilio.com/v1

# Hunter.io API (Find company emails and contacts)
HUNTER_IO_API_KEY=your_hunter_io_api_key_here
HUNTER_IO_BASE_URL=https://api.hunter.io/v2

CLEARBIT_BASE_URL=https://company-stream.clearbit.com/v2

# Crunchbase API (Startup data)
CRUNCHBASE_API_KEY=your_crunchbase_key_here
CRUNCHBASE_BASE_URL=https://api.crunchbase.com/v4

# Hunter.io (Email discovery)
HUNTER_API_KEY=your_hunter_key_here
HUNTER_BASE_URL=https://api.hunter.io/v2

# RocketReach (Contact data)
ROCKETREACH_API_KEY=your_rocketreach_key_here
ROCKETREACH_BASE_URL=https://api.rocketreach.co

# LinkedIn (requires official partnership)
LINKEDIN_API_KEY=your_linkedin_key_here
LINKEDIN_BASE_URL=https://api.linkedin.com/v2

# Email validation service
EMAIL_VALIDATION_SERVICE=hunter
EMAIL_VALIDATION_API_KEY=your_email_validation_key

# Phone validation service
PHONE_VALIDATION_SERVICE=twilio
PHONE_VALIDATION_API_KEY=your_phone_validation_key

# ============================================================
# CACHE CONFIGURATION
# ============================================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL_MINUTES=60

# ============================================================
# RATE LIMITING
# ============================================================

# Rate limit: requests per minute
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Per-source rate limiting
COMPANIES_HOUSE_RATE_LIMIT=5
OPENCORPORATES_RATE_LIMIT=10
CLEARBIT_RATE_LIMIT=100
CRUNCHBASE_RATE_LIMIT=50

# ============================================================
# JOB SCHEDULING
# ============================================================

# Enable/disable scheduled jobs
ENABLE_SCHEDULED_JOBS=true

# Company discovery job (cron format)
COMPANY_DISCOVERY_SCHEDULE=0 0 * * *

# Contact validation job
CONTACT_VALIDATION_SCHEDULE=0 1 * * *

# Data update job
DATA_UPDATE_SCHEDULE=0 2 * * *

# ============================================================
# LOGGING & MONITORING
# ============================================================

LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=10

# Sentry error tracking (optional)
SENTRY_DSN=

# ============================================================
# CORS & SECURITY
# ============================================================

CORS_ORIGIN=http://localhost:3000,http://localhost:5000
CORS_CREDENTIALS=true

# API authentication (if needed)
API_SECRET_KEY=your_secret_key_here

# ============================================================
# DATA PROCESSING
# ============================================================

# Batch processing
BATCH_SIZE=100
BATCH_PROCESS_TIMEOUT=30000

# Data validation
ENABLE_DATA_VALIDATION=true
ENABLE_DUPLICATE_CHECK=true

# ============================================================
# EXPORT CONFIGURATION
# ============================================================

EXPORT_MAX_RECORDS=100000
EXPORT_BATCH_SIZE=1000
EXPORT_TEMP_DIR=./exports

# ============================================================
# FEATURE FLAGS
# ============================================================

FEATURE_CONTACT_AGGREGATION=true
FEATURE_AUTO_DISCOVERY=true
FEATURE_DATA_ENRICHMENT=true
FEATURE_EXPORT_CSV=true
FEATURE_EXPORT_EXCEL=true
