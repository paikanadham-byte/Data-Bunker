# Server Configuration
PORT=5000
NODE_ENV=development

# Companies House API (UK)
# Get your API key from: https://developer.company-information.service.gov.uk/
COMPANIES_HOUSE_API_KEY=your_companies_house_api_key_here

# OpenCorporates API (Global)
# Optional - works without key at lower rate limits
# Get key from: https://opencorporates.com/api_accounts/new
OPENCORPORATES_API_KEY=your_opencorporates_api_key_here

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/databunker

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Google Custom Search (Optional)
GOOGLE_API_KEY=your_google_api_key
GOOGLE_CX=your_custom_search_engine_id
